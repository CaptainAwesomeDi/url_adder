<%= link_to "New Url Entry", new_post_path, method: :get%>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Url</td>
      <td>User Email</td>
      <td>Comments</td>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title%></td>
    <td><a href="<%= post.url%>"><%= post.url%></a></td>
    <td><%= post.user.email%></td>
    <td><%= link_to "show Comments", post_path(post.id)  %></td>
  </tr>
    <% end %>
  </tbody>
